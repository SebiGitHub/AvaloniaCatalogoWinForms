<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaApplication1.viewmodel"
        x:DataType="vm:Mainviewmodel"
        mc:Ignorable="d" 
        d:DesignWidth="1000" 
        d:DesignHeight="550"
        MinHeight="550"
        MaxHeight="550"
        MinWidth="1000"
        MaxWidth="1000"
        x:Class="AvaloniaApplication1.view.MainWindow"
        Title="AvaloniaCatalogoWinForms">
    
    <Grid ColumnDefinitions="220,*">
        <!-- Nueva sección lateral -->
        <Border Padding="20" Background="#2D2D30">
            <Grid RowDefinitions="*, Auto">
                <StackPanel Spacing="20">
                    <Image Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\logo.png" 
                           Width="160" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"/>

                    <Button Classes="UNA"
                            HorizontalAlignment="Stretch" 
                            Background="#007ACC">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\listaimg.png"  Width="20"/>
                            <TextBlock Text="BARAJAS" 
                                       FontWeight="Bold" 
                                       FontSize="15" 
                                       Margin="5, 0, 0, 0"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Background="#28A745" 
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\mas.png"  Width="20"/>
                            <TextBlock Text="AGREGAR" 
                                       FontWeight="Bold" 
                                       FontSize="15" 
                                       Margin="5, 0, 0, 0"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Background="#DC3545" 
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\papelera.png"  Width="20"/>
                            <TextBlock Text="ELIMINAR" 
                                       FontWeight="Bold" 
                                       FontSize="15" 
                                       Margin="5, 0, 0, 0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <Button Grid.Row="1" 
                        Background="#2F80ED" 
                        HorizontalAlignment="Stretch"
                        Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\salir.png"  Width="20"/>
                        <TextBlock Text="SALIR" 
                                   FontWeight="Bold" 
                                   FontSize="15" 
                                   Margin="5, 0, 0, 0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido original modificado -->
        <Grid Grid.Column="1" ColumnDefinitions="100,100,100,100,100,80" 
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              Margin="0">
            
            <Grid.Background>
                <ImageBrush Source="file:C:\Users\Sebas\RiderProjects\AvaloniaApplication1\AvaloniaCatalogoWinForms\Assets\fondo_catalogo.png"
                            Stretch="UniformToFill"
                            AlignmentX="Left"
                            AlignmentY="Top"/>
            </Grid.Background>

            <Border Grid.Row="1" Grid.RowSpan="8" Grid.Column="1" Grid.ColumnSpan="5" 
                    Background="Red"
                    BorderBrush="White" 
                    BorderThickness="5"
                    CornerRadius="8"
                    Padding="16">
            </Border>

            <!-- Título -->
            <TextBlock Text="BARAJAS" 
                       Grid.Row="0" 
                       Grid.Column="3" 
                       Margin="0,22,0,10" 
                       FontSize="20"
                       FontStyle="Italic"
                       HorizontalAlignment="Center" 
                       Foreground="Red" 
                       FontWeight="Bold"/>

            <!-- Etiquetas -->
            <TextBlock Text="Nombre" Grid.Row="1" Grid.Column="1" Margin="20,32,0,5" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Categoria" Grid.Row="2" Grid.Column="1" Margin="20,12,0,5" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Dificultad" Grid.Row="3" Grid.Column="1" Margin="20,12,0,5" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Precio" Grid.Row="4" Grid.Column="1" Margin="20,12,0,5" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Descripción" Grid.Row="5" Grid.Column="1" Margin="20,12,0,5" Foreground="White" FontWeight="Bold"/>

            <!-- Campos de entrada -->
            <TextBox Text="{Binding TxBNombre}" IsEnabled="{Binding Habilitar}"
                     Grid.Row="1" Grid.Column="2"  BorderBrush="Black" 
                     BorderThickness="3" Background="White" Foreground="Black" MinWidth="100" 
                     Margin="0,15,-10,0" Height="30"/>
            <TextBox Text="{Binding TxBCategoria}" IsEnabled="{Binding Habilitar}"
                     Grid.Row="2" Grid.Column="2" BorderBrush="Black" 
                     BorderThickness="3" Background="White" Foreground="Black" MinWidth="100" 
                     Margin="0,0,-10,0" Height="30"/>
            <TextBox Text="{Binding TxBDificultad}" IsEnabled="{Binding Habilitar}"
                     Grid.Row="3" Grid.Column="2" BorderBrush="Black" 
                     BorderThickness="3" Background="White" Foreground="Black" MinWidth="100" 
                     Margin="0,5,-10,0" Height="30"/>
            <TextBox Text="{Binding TxBPrecio}" IsEnabled="{Binding Habilitar}"
                     Grid.Row="4" Grid.Column="2" BorderBrush="Black" 
                     BorderThickness="3" Background="White" Foreground="Black" MinWidth="100" 
                     Margin="0,5,-10,0" Height="30"/>
            <TextBox Text="{Binding TxBDesc}" IsEnabled="{Binding Habilitar}"
                     Grid.Row="5" Grid.Column="2" BorderBrush="Black" 
                     BorderThickness="3" Background="White" Foreground="Black" MinWidth="100" 
                     Margin="0,5,-10,0" Height="30"/>

            <!-- Área de imagen -->
            <Border Grid.Row="1" Grid.RowSpan="6" Grid.Column="4" 
                    Background="Black" BorderBrush="White" BorderThickness="5" 
                    Margin="0,15,0,0" Width="200" Height="200">
                <Image Stretch="Uniform" Source="{Binding Imagen}"/>
            </Border>

            <!-- Botones -->
            <Button IsEnabled="{Binding BtnHabilitar}" Command="{Binding btnAnadir_ClickCommand}" 
                    Content="AÑADIR" Grid.Row="7" Grid.Column="1" Margin="15,30,15,25" HorizontalAlignment="Center"/>
                            
            <Button IsEnabled="{Binding BtnHabilitar}" Command="{Binding btnBorrar_ClickCommand}" 
                    Content="{Binding BtnBorrar}" Grid.Row="7" Grid.Column="2" Margin="10,30,15,25" HorizontalAlignment="Center"/>
                            
            <Button Command="{Binding btnAnterior_ClickCommand}" 
                    Content="{Binding BtnAnterior}" Grid.Row="7" Grid.Column="4" Margin="-50,30,55,25" HorizontalAlignment="Center"/>
                            
            <Button Command="{Binding btnSiguiente_ClickCommand}" 
                    Content="{Binding BtnSiguiente}" Grid.Row="7" Grid.Column="5" Margin="-45,30,35,25" HorizontalAlignment="Center"/>
                            
            <Button IsEnabled="{Binding BtnCargarImagen}" Command="{Binding btnCargarImagen_ClickCommand}" 
                    Content="CargarImagen" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Grid.Row="7" Grid.Column="1" 
                    Margin="165,30,-185,25" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>